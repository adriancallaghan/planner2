


<h3>Overview</h3>
<p>Dates have Transactions, that relate to payments, that have accounts and Tags</p>
<table class="table table-bordered">
    <?php foreach($this->dates AS $date): ?>

        <tr>
            <td><?php echo $date->id; ?></td>
            <td><?php echo $date->date; ?></td>
            <td>
                <table class="table table-bordered table-condensed table-hover table-striped">                    
                    <tr>
                        <th>Transaction ID</th>
                        <th>Payment REF</th>
                        <th>Amount</th>
                        <th>Description</th>
                        <th>Comment</th>
                        <th>Account</th>
                    </tr>
                    <?php foreach($date->transactions AS $transaction) : ?>                  
                        <tr>
                            <td><?php echo $transaction->id; ?></td>
                            <td><?php echo $transaction->payment->id; ?></td>
                            <td>&pound;<?php echo $transaction->amount; ?></td>
                            <td><?php echo $transaction->payment->description; ?></td>
                            <td><?php echo $transaction->comment; ?></td>
                            <td><?php echo @$transaction->payment->account->name; ?></td>
                        </tr>
                    <?php endforeach; ?>
                </table>
            </td>
        </tr>

    <?php endforeach; ?>
</table>
