                            <td><?php echo $activity->id; ?></td>
                            <td><?php echo $activity->transaction->id; ?></td>
                            <td>&pound;<?php echo $activity->amount; ?></td>
                            <td><?php echo $activity->transaction->description; ?></td>
                            <td><?php echo $activity->comment; ?></td>
                            <td><?php echo @$activity->transaction->account->name; ?></td>
                        </tr>
                    <?php endforeach; ?>
                </table>
            </td>
        </tr>

    <?php endforeach; ?>
</table>



